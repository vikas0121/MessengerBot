doctype html

html
  head
    title="Chatbot"
  

  body
           .fb-messenger-checkbox(origin="https://6c368641.ngrok.io/" , page_id=2012365012320569, messenger_app_id=747179468800756, user_ref="#{guid}"  ,prechecked="true" ,allow_login="true",size="large")
           input(type="button" onclick="confirmOptIn()" value="Confirm Opt-in")



script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.11.3/jquery.js")
script.

    window.fbAsyncInit = function () {
      FB.init({
        appId: '747179468800756',
        xfbml: true,
        version: 'v2.8'
      });

      FB.Event.subscribe('messenger_checkbox', function (e) {
        console.log("messenger_checkbox event");
        console.log(e);

        if (e.event == 'rendered') {
          console.log("Plugin was rendered");
        } else if (e.event == 'checkbox') {
          var checkboxState = e.state;
          console.log("Checkbox state: " + checkboxState);
        } else if (e.event == 'not_you') {
          console.log("User clicked 'not you'");
        } else if (e.event == 'hidden') {
          console.log("Plugin was hidden");
        }
      });
    };

    (function (d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) {
        return;
      }
      js = d.createElement(s);
      js.id = id;
      js.src = "//connect.facebook.net/en_US/sdk.js";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));

    function confirmOptIn() {
      console.log("confirm optin called")
      console.log("#{guid}")
      FB.AppEvents.logEvent('MessengerCheckboxUserConfirmation', null, {
        'app_id': '747179468800756',
        'page_id': '2012365012320569',
        'user_ref': "#{guid}"
      });
    }

    

    